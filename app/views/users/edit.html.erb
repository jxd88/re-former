<%= form_for @user do |t| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

	<%= t.label "username", "Username:" %>
	<%= t.text_field :username %><br>
	<%= t.label "email", "E-mail:" %>
	<%= t.text_field :email, placeholder: "eg: example@example.com" %><br>
	<%= t.label "password", "Password:" %>
	<%= t.password_field :password %><br>
	<%= t.submit "Submit" %>
<% end %>